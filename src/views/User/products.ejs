<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/products.css" />
    <link rel="stylesheet" href="/public/css/style.css" />
    <link rel="stylesheet" href="/public/css/navbar.css" />
    <title>Products</title>
  </head>

  <body>
    <% if (sessionID) { %> <%- include('../layouts/home_header') %> <% } else {
    %> <%- include('../layouts/header') %> <% } %>
    <div class="products-main">
      <div class="seperator"></div>
      <div style="display: flex">
        <div class="container">
          <header>
            <div>
              <h1>PRODUCTS</h1>
              <% if (sessionID) { if (userInfo.selling==1) { %>
              <a href="/add-product" class="add-product-btn">Add Product</a>
              <% } } %>
            </div>
            <div class="iconCart">
              <img src="/public/assets/images/shopping-cart.svg" />
              <div class="totalQuantity">0</div>
            </div>
          </header>

          <div class="listProduct">
            <div class="item">
              <img src="/public/productImage/1.png" alt="" />
              <h2>sadkjfskdjf</h2>
              <div class="price">₹324</div>
              <button>Add To Cart</button>
            </div>
          </div>
        </div>

        <div class="cart">
          <h2>CART</h2>

          <div class="listCart">
            <div class="item">
              <img src="/public/productImage/1.png" />
              <div class="content">
                <div class="name">CoPilot / Black / Automatic</div>
                <div class="price">₹550 / 1 product</div>
              </div>
              <div class="quantity">
                <button>-</button>
                <span class="value">3</span>
                <button>+</button>
              </div>
            </div>
          </div>

          <div class="buttons">
            <div class="close">CLOSE</div>
            <div class="checkout">
              <a href="/checkout">CHECKOUT</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="seperator-1"></div>
    <%- include('../layouts/footer') %>
  </body>
  <script src="/public/javascript/navbar.js"></script>
  <script src="/public/javascript/products.js"></script>
</html>
